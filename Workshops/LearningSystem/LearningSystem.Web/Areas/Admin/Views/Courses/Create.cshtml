@model AddCourseFormModel

@{
    this.ViewData["Title"] = "Create Course";
}

<h2>@this.ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="@this.Model.Name"></label>
                <input asp-for="@this.Model.Name" class="form-control" />
                <span asp-validation-for="@this.Model.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@this.Model.Description"></label>
                <textarea asp-for="@this.Model.Description" rows="10" class="form-control"></textarea>
                <span asp-validation-for="@this.Model.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@this.Model.StartDate"></label>
                <input asp-for="@this.Model.StartDate" class="form-control" />
                <span asp-validation-for="@this.Model.StartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@this.Model.EndDate"></label>
                <input asp-for="@this.Model.EndDate" class="form-control" />
                <span asp-validation-for="@this.Model.EndDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@this.Model.TrainerId"></label>
                <select asp-for="@this.Model.TrainerId" asp-items="@this.Model.Trainers" class="form-control" ></select>
                <span asp-validation-for="@this.Model.TrainerId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Add Course</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
