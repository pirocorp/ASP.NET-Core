@model IEnumerable<HomeIndexCourseListingModel>

@foreach (var course in this.Model)
{
    <div class="list-group">
        <a class="list-group-item list-group-item-action my-4" asp-area="" asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id" asp-route-title="@course.Name.ToFriendlyUrl()">
            <div>
                <h5 class="mb-1">@course.Name</h5>
            </div>

            <p>&nbsp;</p>

            <div>
                @(this.Html.Raw(course.DisplayDescription))
            </div>

            <div>
                <div class="d-flex w-100 justify-content-between">
                    <small>By: @course.TrainerName</small>
                    <small>Start date: @course.StartDate.ToString(DateTimePreferredFormat)</small>
                </div>
            </div>
        </a>
    </div>
}