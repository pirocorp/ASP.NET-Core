@model List<PackageViewModel>
@{
    this.ViewData["Title"] = "Shipped Shipments";
}

<h1 class="text-center">@this.ViewData["Title"]</h1>
<hr class="hr-2 bg-panda">
<div class="d-flex justify-content-between">
    <table class="table table-hover table-bordered">
        <thead>
        <tr class="row">
            <th scope="col" class="col-lg-1 d-flex justify-content-center"><h3>#</h3></th>
            <th scope="col" class="col-lg-4 d-flex justify-content-center"><h3>Description</h3></th>
            <th scope="col" class="col-lg-1 d-flex justify-content-center"><h3>Weight</h3></th>
            <th scope="col" class="col-lg-3 d-flex justify-content-center"><h3>Shipping Address</h3></th>
            <th scope="col" class="col-lg-2 d-flex justify-content-center"><h3>Recipient</h3></th>
            <th scope="col" class="col-lg-1 d-flex justify-content-center"><h3>Actions</h3></th>
        </tr>
        </thead>
        <tbody>
        @for (var i = 0; i < this.Model.Count; i++)
        {
            var item = this.Model[i];

            <tr class="row">
                <th scope="row" class="col-lg-1 d-flex justify-content-center"><h5>@(i + 1)</h5></th>
                <td class="col-lg-4 d-flex justify-content-center"><h5>@item.Description</h5></td>
                <td class="col-lg-1 d-flex justify-content-center"><h5>@item.Weight.ToString("F2") KG</h5></td>
                <td class="col-lg-3 d-flex justify-content-center"><h5>@item.ShippingAddress</h5></td>
                <td class="col-lg-2 d-flex justify-content-center"><h5>@item.RecipientUserName</h5></td>
                <td class="col-lg-1 d-flex justify-content-center">
                    <a asp-controller="Package" asp-action="ChangeStatus" asp-route-id="@item.Id" asp-route-status="Shipped" class="btn bg-panda text-white">Deliver</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>