@model PackageDetailsViewModel
@{
    this.ViewData["Title"] = "Package Details";
}

<h1 class="text-center">@this.ViewData["Title"]</h1>
<hr class="hr-2 bg-panda">
<div class="mx-auto">
    <div class="d-flex justify-content-around">
        <div class="d-flex flex-column">
            <h2 class="text-center">Address</h2>
            <h3 class="text-center mt-1">@(this.Model.ShippingAddress)</h3>
        </div>
        <div class="d-flex flex-column">
            <h2 class="text-center">Status</h2>
            <h3 class="text-center mt-1">@this.Model.StatusName</h3>
        </div>
        <div class="d-flex flex-column">
            <h2 class="text-center">Estimated Delivery Date</h2>
            <h3 class="text-center mt-1">@this.Model.DeliveryDate</h3>
        </div>
    </div>
    <hr class="hr-2 bg-panda">
    <div class="w-75 mx-auto d-flex justify-content-between">
        <div class="d-flex flex-column w-50">
            <h2 class="text-center">Weight</h2>
            <h3 class="text-center mt-1">@this.Model.Weight.ToString("F2") KG</h3>
        </div>
        <div class="d-flex flex-column w-50">
            <h2 class="text-center">Recipient</h2>
            <h3 class="text-center mt-1">@this.Model.RecipientUserName</h3>
        </div>
    </div>
    <hr class="hr-2 w-75 bg-panda">
    <div>
        <h2 class="text-center">Description</h2>
        <h3 class="text-center mt-3">@this.Model.Description</h3>
    </div>
</div>