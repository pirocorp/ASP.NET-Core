@model ReceiptIndexViewModel

@{
    this.ViewData["Title"] = "My Receipts";
}

<h1 class="text-center text-primary">@this.ViewData["Title"]</h1>
<hr class="hr-2 bg-primary w-50">
<table class="table table-hover">
    <thead>
        <tr class="row text-primary text-center font-weight-bold">
            <th class="col-md-4 h3">Id</th>
            <th class="col-md-2 h3">Issued On</th>
            <th class="col-md-2 h3">Total</th>
            <th class="col-md-1 h3">Products</th>
            <th class="col-md-3 h3">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var receipt in this.Model.Orders)
        {
            <tr class="row text-primary text-center font-weight-bold">
                <td class="col-md-4 h5">@receipt.Id</td>
                <td class="col-md-2 h5">@receipt.IssuedOn.ToString("dd/MM/yyyy")</td>
                <td class="col-md-2 h5">$@(receipt.TotalAmount.ToString(GlobalConstants.CurrencyFormatter))</td>
                <td class="col-md-1 h5">@receipt.ProductsCount</td>
                <td class="col-md-3">
                    <a asp-area="" asp-controller="Receipt" asp-action="Details" asp-route-id="@receipt.Id" class="btn btn-primary font-weight-bold">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>