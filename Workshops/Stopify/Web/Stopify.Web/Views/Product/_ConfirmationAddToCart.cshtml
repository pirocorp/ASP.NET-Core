<!-- Modal -->
<div class="modal fade" id="buyConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="buyConfirmationModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="buyConfirmationModalTitle">@this.Model.Name</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Add @this.Model.Name for $@this.Model.Price.ToString("F2") to cart
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <a class="btn btn-outline-primary text-dark border-dark hover mx-1" asp-area="" asp-controller="Product" asp-action="Order" asp-route-id="@this.Model.Id">
                    <i class="fa fa-shopping-cart p-0"></i>
                    Add to cart
                </a>
            </div>
        </div>
    </div>
</div>
