@page
@model ContactModel
@{
    ViewData["Title"] = "Contact";
}

<h1>Contact Form</h1>

<h5 class="text-danger">@Model.Info</h5>
<br />

<form method="post" class="col-md-6 col-lg-4">
    <div class="form-group">
        @*<label asp-for="@Model.InputModel.Name"></label>*@
        <input asp-for="Input.Name" class="form-control" placeholder="Name"/>
        <span asp-validation-for="Input.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="Input.Email" class="form-control" placeholder="Email"/>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="Input.Title" class="form-control" placeholder="Title"/>
        <span asp-validation-for="Input.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <textarea asp-for="Input.Content" rows="10" class="form-control" placeholder="Message...">
        </textarea>
        <span asp-validation-for="Input.Content" class="text-danger"></span>
    </div>
    <div>
        <input class="btn btn-primary" type="submit" value="Submit" />
    </div>
</form>