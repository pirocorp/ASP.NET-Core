@page
@model AddModel
@{
    ViewData["Title"] = "Add Book";
}

<h2>@ViewData["Title"]</h2>

<div class="col-md-6">
    <form method="post">
        <div class="form-group row">
            <label asp-for="Input.Title" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="Input.Title" class="form-control" />
            </div>
            <span class="offset-sm-4 col-sm-8 text-danger" asp-validation-for="Input.Title"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Input.ImageUrl" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="Input.ImageUrl" class="form-control" />
            </div>
            <span class="offset-sm-4 col-sm-8 text-danger" asp-validation-for="Input.ImageUrl"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Input.AuthorName" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="Input.AuthorName" class="form-control" />
            </div>
            <span class="offset-sm-4 col-sm-8 text-danger" asp-validation-for="Input.AuthorName"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Input.Description" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <textarea asp-for="Input.Description" rows="5" class="form-control" >
                </textarea>
            </div>
            <span class="offset-sm-4 col-sm-8 text-danger" asp-validation-for="Input.Description"></span>
        </div>

        <div class="form-group row">
            <div class="col-sm-8 offset-sm-4">
                <input type="submit" class="btn btn-success ml-auto" value="Add Book"/>
            </div>
        </div>
    </form>
</div>