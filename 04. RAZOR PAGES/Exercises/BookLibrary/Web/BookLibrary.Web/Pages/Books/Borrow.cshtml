@page  "{id:int}"
@model BorrowModel
@{
    ViewData["Title"] = $"Borrow {Model.Output.Title}";
    var date = DateTime.UtcNow.ToString("yyyy-MM-dd");
}

<h2>@ViewData["Title"]</h2>

<div class="col-md-6">
    <form method="post">
        <div class="form-group row">
            <div class="col-sm-8">
                <input asp-for="Input.BookId" hidden value="@Model.Output.BookId" class="form-control" />
            </div>
        </div>        

        <div class="form-group row">
            <label asp-for="Input.BorrowerId" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <select asp-for="Input.BorrowerId" class="form-control" asp-items="@Model.Output.Borrowers">
                </select>
            </div>
            <span class="offset-sm-4 col-sm-8 text-danger" asp-validation-for="Input.BorrowerId"></span>
        </div>

        <div class="form-group row">
            <div class="col-sm-8 offset-sm-4">
                <input type="submit" class="btn btn-success ml-auto" value="Borrow Book"/>
            </div>
        </div>
    </form>
</div>