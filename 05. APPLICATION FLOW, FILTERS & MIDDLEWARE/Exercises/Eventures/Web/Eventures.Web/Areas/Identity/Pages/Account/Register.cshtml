@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center mt-3 ">@ViewData["Title"]</h1>

<hr class="mt-3 bg-eventures hr-2" />

<form method="post" class="col-md-8 col-lg-6 col-xl-5 mx-auto">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="d-sm-flex justify-content-between">
        <div class="form-group flex-grow-1 px-4">
            <label asp-for="Input.Username" class="font-weight-bold d-block text-center"></label>
            <input asp-for="Input.Username" class="form-control" />
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>

        <div class="form-group flex-grow-1 px-4">
            <label asp-for="Input.Email" class="font-weight-bold d-block text-center"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
    </div>

    <div class="d-sm-flex justify-content-between">
        <div class="form-group flex-grow-1 px-4">
            <label asp-for="Input.Password" class="font-weight-bold d-block text-center"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-group flex-grow-1 px-4">
            <label asp-for="Input.ConfirmPassword" class="font-weight-bold d-block text-center"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

    <hr class="mt-3 bg-eventures hr-2" />

    <div class="d-sm-flex justify-content-between">
        <div class="form-group flex-grow-1 px-4">
            <label asp-for="Input.Firstname" class="font-weight-bold d-block text-center"></label>
            <input asp-for="Input.Firstname" class="form-control" />
            <span asp-validation-for="Input.Firstname" class="text-danger"></span>
        </div>

        <div class="form-group flex-grow-1 px-4">
            <label asp-for="Input.Lastname" class="font-weight-bold d-block text-center"></label>
            <input asp-for="Input.Lastname" class="form-control" />
            <span asp-validation-for="Input.Lastname" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group px-4">
        <label asp-for="Input.Ucn" class="font-weight-bold d-block text-center"></label>
        <input asp-for="Input.Ucn" class="form-control" />
        <span asp-validation-for="Input.Ucn" class="text-danger"></span>
    </div>

    <hr class="mt-3 bg-eventures hr-2" />
    
    <div class="text-center mb-3">
        <button type="submit" class="btn bt-eventures font-weight-bold">Register</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
