
@model EventCreateModel
@{
    ViewData["Title"] = "Create Event";
}

<h1>@ViewData["Title"]</h1>

<form method="post" class="col-lg-8 col-xl-7 mx-auto">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="d-md-flex justify-content-between">
        <div class="form-group flex-grow-1 px-4">
            <label asp-for="Name" class="font-weight-bold d-block text-center"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group flex-grow-1 px-4">
            <label asp-for="Place" class="font-weight-bold d-block text-center"></label>
            <input asp-for="Place" class="form-control" />
            <span asp-validation-for="Place" class="text-danger"></span>
        </div>
    </div>

    <hr class="mt-3 bg-eventures hr-2" />

    <div class="d-md-flex justify-content-between">
        <div class="form-group flex-grow-1 px-4">
            <label asp-for="Start" class="font-weight-bold d-block text-center"></label>
            <input asp-for="Start" class="form-control" />
            <span asp-validation-for="Start" class="text-danger"></span>
        </div>

        <div class="form-group flex-grow-1 px-4">
            <label asp-for="End" class="font-weight-bold d-block text-center"></label>
            <input asp-for="End" class="form-control" />
            <span asp-validation-for="End" class="text-danger"></span>
        </div>
    </div>

    <hr class="mt-3 bg-eventures hr-2" />
    
    <div class="d-md-flex justify-content-between">
        <div class="form-group flex-grow-1 px-4">
            <label asp-for="TotalTickets" class="font-weight-bold d-block text-center"></label>
            <input asp-for="TotalTickets" class="form-control" />
            <span asp-validation-for="TotalTickets" class="text-danger"></span>
        </div>

        <div class="form-group flex-grow-1 px-4">
            <label asp-for="Price" class="font-weight-bold d-block text-center"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>

    <hr class="mt-3 bg-eventures hr-2" />

    <div class="text-center mb-3">
        <button type="submit" class="btn bt-eventures font-weight-bold">Register</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}