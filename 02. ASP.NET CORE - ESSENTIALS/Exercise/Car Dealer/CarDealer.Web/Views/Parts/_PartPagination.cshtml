@* ReSharper disable Html.PathError *@
@model PartPageListingModel

@{
    var previousDisabled = this.Model.CurrentPage <= 1 ? "disabled" : string.Empty;
    var nextDisabled = this.Model.CurrentPage >= this.Model.TotalPages ? "disabled" : string.Empty;
}

<ul class="pagination pagination-lg">
    <li class="@previousDisabled">
        <a class="@previousDisabled" href="/parts/all?page=@(this.Model.PreviousPage)" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
        </a>
    </li>
    @for (var i = 1; i <= this.@Model.TotalPages; i++)
    {
        <li class="@(i == this.Model.CurrentPage ? "active" : string.Empty)">
            <a href="/parts/all?page=@i">@i</a>
        </li>
    }
    <li class="@nextDisabled">
        <a class="@nextDisabled" href="/parts/all?page=@(this.Model.NextPage)" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
        </a>
    </li>
</ul>
