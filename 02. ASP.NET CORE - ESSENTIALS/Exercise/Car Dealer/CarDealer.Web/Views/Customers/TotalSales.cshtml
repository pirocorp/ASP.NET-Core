@model CustomerTotalSalesModel

@{
    this.ViewData["Title"] = $"Customer {this.Model?.Name}";
}

<h2>@(this.ViewData["Title"])</h2>

@{
    var totalCars = this.Model?.BoughtCars.Count();
}

<p>@totalCars @(totalCars != 1 ? "Cars" : "Car") Bought</p>
<p>$@(this.Model?.TotalMoneySpent.ToPrice())</p>