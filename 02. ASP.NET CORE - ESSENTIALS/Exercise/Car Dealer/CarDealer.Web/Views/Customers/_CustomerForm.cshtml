@model CustomerFormModel

<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BirthDay"></label>
        <input asp-for="BirthDay" type="date" class="form-control" />
        <span asp-validation-for="BirthDay"></span>
    </div>
    <div>
        <input asp-for="IsYoungDriver"/>
        <label asp-for="IsYoungDriver"></label>
        <span asp-validation-for="IsYoungDriver" class="text-danger"></span>
    </div>
    <div>
        <input class="btn btn-success" type="submit" value="Save Customer" />
    </div>
</form>