@model SuppliersModel

@{
    this.ViewData["Title"] = $"{this.Model.Type} Suppliers";
}

<h2>@($"{this.Model.Type} Suppliers")</h2>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Parts</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in this.Model.Suppliers)
        {
            <tr>
                <th>@supplier.Id</th>
                <th>@supplier.Name</th>
                <th>@supplier.TotalParts</th>
            </tr>
        }
    </tbody>
</table>
